<%= render "shared/errors", obj: genre %>

<%= form_for(genre, :html => {class: "form-horizontal", role: "form"}) do |f| %>
  <div class="form-group">
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control", placeholder: "Genre name", autofocus: true %>
    </div><br>
    <div class="field">
      <%= f.label :description %><br>
      <%= f.rich_text_area :description %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>